<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComplaintAppPageFactory.CustomControls.RequiredCell">
    <ViewCell.View>
        <StackLayout x:Name="MainStackLayout" BackgroundColor="White" Padding="5">
            <StackLayout Orientation="Horizontal" >
                <Label x:Name="TitleLabel" TextColor="DarkCyan" />
                <Label x:Name="RequiredLabel" Text="Required*" TextColor="Red" HorizontalOptions="EndAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ViewCell.View>
</ViewCell>